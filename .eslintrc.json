{
  "root": true,
  "env": {
    "node": true,
    "es6": true
  },
  "extends": ["eslint:recommended", "airbnb", "oclif"],
  "parserOptions": {
    "ecmaVersion": 8
  },
  "globals": {
    "Atomics": "readonly",
    "SharedArrayBuffer": "readonly"
  },
  "plugins": ["import"],
  "rules": {
    "valid-jsdoc": 2,
    "comma-dangle": 0,
    "new-cap": "off",
    "arrow-parens": "off",
    "object-curly-spacing": "off",
    "semi": "off"
  }
}
